/* pages/add-address/add-address.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: ghostwhite;
}

.header {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-top: 1rpx solid gainsboro;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  color: red;
  margin-bottom: 20rpx;
  background: white;
}

.li {
  width: 100%;
  height: 120rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 1rpx solid gainsboro;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
}

.li input {
  width: 70%;
}

.li view {
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.van-icon {
  font-size: 40rpx !important;
  color: gray;
}

.btn {
  width: 90%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  background: #1AAD19;
  font-weight: 600;
  margin: 100rpx 5%;
  border-radius: 5rpx;
}