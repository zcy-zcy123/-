/* pages/search/search.wxss */
.container {
  width: 100%;
}

.search {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  align-items: center;
}

.search>.van-icon {
  font-size: 40rpx;
  margin: 0 10rpx;
}

.search>view {
  width: 90%;
  height: 70rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  border: 1rpx solid gainsboro;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.search>view .van-icon {
  font-size: 40rpx;
  color: gray;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.nav view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav .cur {
  color: red;
}

.nav .curr {
  color: black;
}

.list {
  width: 100%;
  background: ghostwhite;
  box-sizing: border-box;
  padding: 20rpx;
}

.list>view {
  width: 100%;
  height: 200rpx;
  background: white;
  margin: 10rpx 0;
  display: flex;
  border-radius: 15rpx;
}

.list>view image {
  width: 30%;
  height: 100%;
  border-radius: 15rpx 0 0 15rpx;
}

.list>view>view {
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
}

.list>view>view view {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 32rpx;
}

.list>view>view view:nth-child(2) {
  color: red;
  margin: 10rpx 0;
}

.list>view>view view:nth-child(3) {
  color: gray;
  font-size: 28rpx;
}

.list>view>view view:last-child {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: red;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list>view>view view .van-icon {
  font-size: 50rpx;
  color: red;
}

.list1 {
  width: 100%;
  background: ghostwhite;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.list1>view {
  width: 49%;
  border-radius: 15rpx;
  background: white;
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx 0;
}

.list1>view image {
  width: 100%;
  height: 300rpx;
  border-radius: 15rpx 15rpx 0 0;
}

.list1>view>view {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
}

.list1>view>view view {
  width: 320rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 32rpx;
}

.list1>view>view view:nth-child(2) {
  color: red;
  margin: 10rpx 0;
}

.list1>view>view view:nth-child(3) {
  width: 100%;
  color: gray;
  font-size: 28rpx;
}

.list1>view>view view:last-child {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: red;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list1>view>view view .van-icon {
  font-size: 50rpx;
  color: red;
}