/* pages/Coupon/Coupon.wxss */
.container {
  width: 100%;
  height: 100vh;
  background: ghostwhite;
}

.nav {
  width: 100%;
  height: 100rpx;
  display: flex;
}

.nav view {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}

.nav .cur {
  background: white;
  color: orange;
}

.nav .curr {
  background: ghostwhite;
  color: black;
}

.juan {
  width: 100%;
  height: 100rpx;
  background: white;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.juan .van-icon {
  color: gray;
  font-size: 40rpx;
}

.list {
  width: 100%;
}