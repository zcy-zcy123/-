/* pages/user/user.wxss */
.container {
  width: 100%;
  background: ghostwhite;
}

.header {
  width: 100%;
  height: 200rpx;
  background: #E64340;
  color: white;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.header .van-icon {
  font-size: 120rpx;
  margin: 0 30rpx;
  font-weight: lighter;
}

.head {
  width: 100%;
  height: 200rpx;
  background: #E64340;
  color: white;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.head image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}

.head>view {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-content: space-between;
  flex-wrap: wrap;
}

.head>view view {
  width: 100%;
  font-size: 30rpx;
  color: white;
}

.nav {
  width: 100%;
  height: 100rpx;
  padding: 15rpx 0;
  display: flex;
  background: white;
  margin-bottom: 20rpx;
}

.nav>view {
  flex: 1;
  box-sizing: border-box;
  border-right: 2rpx solid gainsboro;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
}

.nav>view>view {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 30rpx;
}

.ul {
  background: white;
  margin: 20rpx 0;
}

.li {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  align-items: center;
  border-bottom: 1rpx solid ghostwhite;
  background: white;
}

.li .van-icon {
  font-size: 30rpx;
  color: gray;
}

.li .item {
  width: 200rpx;
  height: 70rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: white;
  background: #1AAD19;
  display: flex;
  justify-content: center;
  align-items: center;
}

.li text {
  font-size: 30rpx;
  color: gray;
}

.shopping {
  width: 100%;
  height: 150rpx;
  display: flex;
  border-bottom: 1rpx solid ghostwhite;
}

.shopping>view {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  justify-content: center;
  color: gray;
}

.shopping>view .van-icon {
  font-size: 70rpx;
}

.shopping>view view {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
}